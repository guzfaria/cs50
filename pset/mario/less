#include <cs50.h>
#include <stdio.h>

int main(void)
{
    // Pega o valor de n com o usu√°rio
    int n;
    do
    {
        n = get_int("Height: ");
    }
    while (n < 1 || n > 8);
    
    // Imprimi os hashs
    for (int i = 0; i < n; i++)
    {

      for (int z = n-1; z >=i+1; z--)
            {
                printf(" ");
            }
      
        for (int j = 0; j <= i; j++)
        {
            printf("#");

        }
        
            printf("\n");

    }
    
        printf("\n"); 
}
